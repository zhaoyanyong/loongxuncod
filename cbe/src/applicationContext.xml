	</bean>
		
	<bean id="loginAction" class="com.loongxun.cbe.user.action.LoginAction" scope="prototype">
		<property name="loginDao" ref="loginDao"></property>
		<property name="sysLogDao" ref="sysLogDao"></property>
		<property name="enterpriseDAO" ref="enterpriseDAO"></property>
		<property name="roleDao" ref="roleDao"></property>
	</bean>
	<bean id="attributecontorller" class="com.loongxun.cbe.enterprise.action.AttributeController" scope="prototype">
		<property name="sysLogDao" ref="sysLogDao"></property>
		<property name="enterpriseDAO" ref="enterpriseDAO"></property>
		<property name="attributeDao" ref="attributeDao"></property>
		<property name="userDao" ref="userDao"></property>
	</bean>
	<bean id="AnalysisAttribute" class="com.loongxun.cbe.enterprise.action.AnalysisAction" scope="prototype">
			<property name="enterpriseDAO" ref="enterpriseDAO"></property>
			<property name="attributeService" ref="attributeService"></property>
			<property name="analyHDAO" ref="analyHDao"></property>
			<property name="ratingHDAO" ref="ratingHDao"></property>
	</bean>
<bean id="finddataTotalScoerAction" class="com.loongxun.cbe.enterprise.action.FinddataTotalScoerAction" scope="prototype">
