	</bean>
	<bean id="findRatingReportAction" class="com.loongxun.cbe.ratingAction.FindRatingReportAction" scope="prototype">
			<property name="enterpriseDAO" ref="enterpriseDAO"></property>
			<property name="analyHDAO" ref="analyHDao"></property>
			<property name="ratingHDAO" ref="ratingHDao"></property>
				<property name="attributeDao" ref="attributeDao"></property>
	</bean>
